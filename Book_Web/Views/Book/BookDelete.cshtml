@model BookDTO

@{
    ViewData["Title"] = "BookDelete";
}

<h1>Delete book</h1>
<div>
    <a asp-action="BookIndex" class="btn btn-warning">Return to Books Index</a>
    <hr />
</div>

<div>
    <form asp-action="BookDelete">
        <input asp-for="Id" hidden />
        <div class="container border p-3">
            <hr />
            <div class="row">

                <div class="col-2">
                    <label asp-for="Name" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Name" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Author" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Author" disabled class="form-control" />
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <label asp-for="Available" class="control-label"></label>
                    </label>
                    <input disabled asp-for="Available" class="form-check-input" />
                </div>

                <div class="col-2">
                    <label asp-for="ReleaseDate" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="ReleaseDate" disabled class="form-control" rows="5" />
                </div>

                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>

            </div>
        </div>
    </form>
</div>